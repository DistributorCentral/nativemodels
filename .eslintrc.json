{
	"env": {
		"es6": true,
		"node": true
	},
	"extends": ["eslint:all", "prettier", "plugin:jest/recommended"],
	"parserOptions": {
		"ecmaVersion": 9,
		"sourceType": "module"
	},
	"plugins": ["jest"],
	"rules": {
		"array-bracket-newline": "off",
		"array-element-newline": "off",
		"brace-style": "off",
		"capitalized-comments": "off",
		"class-methods-use-this": "off",
		"eol-last": "off",
		"global-require": "off",
		"id-length": "off",
		"init-declarations": "off",
		"max-statements-per-line": [
			"error",
			{
				"max": 2
			}
		],
		"multiline-comment-style": "off",
		"multiline-ternary": "off",
		"no-console": "off",
		"no-extra-parens": "off",
		"no-magic-numbers": "off",
		"no-process-env": "off",
		"no-sync": "off",
		"no-tabs": "off",
		"no-ternary": "off",
		"no-undefined": "off",
		"no-unused-expressions": [
			"error",
			{
				"allowShortCircuit": true
			}
		],
		"one-var": "off",
		"padded-blocks": "off",
		"padding-line-between-statements": [
			"error",
			{
				"blankLine": "always",
				"next": "*",
				"prev": ["const", "let", "var"]
			},
			{
				"blankLine": "any",
				"next": ["const", "let", "var"],
				"prev": ["const", "let", "var"]
			}
		],
		"quote-props": "off",
		"quotes": "off",
		"radix": "off",
		"valid-jsdoc": [
			"error",
			{
				"requireReturn": false
			}
		]
	}
}
